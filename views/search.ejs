<% include ./partials/header %>

    <div class="fluid-container">
        <div id="discover-carousel">
            <div id="prev-btn">
                    <i class="fa fa-angle-left fa-5x" aria-hidden="true"></i>
            </div>
            <div class="owl-carousel">
                    <% data["results"].forEach( function(info){ %>
                        <div class="item">
                            <img class="discover-poster" src="<%= posters.images.base_url %><%= posters.images.poster_sizes[3] %><%= info['poster_path'] %>">
